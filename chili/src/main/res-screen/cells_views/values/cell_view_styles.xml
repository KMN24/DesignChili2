<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Chili.CellViewStyle" parent="Chili.BaseChiliViewStyle">
        <item name="android:elevation">?ChiliCellViewElevation</item>
        <item name="background_radius">@dimen/padding_14dp</item>
        <item name="shadow_blur">@dimen/padding_32dp</item>
        <item name="shadow_color">#14FF0000</item>
        <item name="shadow_offset_x">@dimen/padding_0dp</item>
        <item name="shadow_offset_y">@dimen/padding_8dp</item>
    </style>

    <style name="Chili.CellViewStyle.BaseCellViewStyle"/>

    <style name="Chili.CellViewStyle.BaseCellViewStyle.Toggle">
        <item name="isChevronVisible">false</item>
    </style>

    <style name="Chili.CellViewStyle.BaseCellViewStyle.EndIcon">
        <item name="isChevronVisible">false</item>
        <item name="endIconSize">@dimen/view_24dp</item>
    </style>

    <style name="Chili.CellViewStyle.BaseCellViewStyle.CheckBox">
        <item name="isChevronVisible">false</item>
    </style>

    <style name="Chili.CellViewStyle.BaseCellViewStyle.AdditionalText">
        <item name="additionalTextTextAppearance">@style/Chili.H7.Secondary</item>
    </style>

    <style name="Chili.CellViewStyle.BaseCellViewStyle.Action"/>

    <style name="Chili.CellViewStyle.InfoCellView"/>

    <style name="Chili.CellViewStyle.ExpandableCellView"/>

    <style name="Chili.CellViewStyle.ProgressCellView"/>

    <style name="Chili.CellViewStyle.DetailCellView"/>

    <style name="Chili.CellViewStyle.StatusMarkerCellView"/>

</resources>